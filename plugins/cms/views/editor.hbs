<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LINDAS CMS - Content Management</title>
  <style>
    :root {
      --primary: #d8232a;
      --primary-dark: #b01e24;
      --secondary: #1a365d;
      --secondary-light: #2d4a6f;
      --bg: #f5f5f5;
      --bg-dark: #e8e8e8;
      --text: #333;
      --border: #ddd;
      --success: #2f855a;
      --warning: #c05621;
      --error: #c53030;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
    }

    .cms-header {
      background: var(--secondary);
      color: white;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .cms-header h1 {
      font-size: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .cms-header .logo {
      width: 30px;
      height: 30px;
    }

    .cms-header-actions {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    .user-info {
      font-size: 0.9rem;
      opacity: 0.9;
    }

    .btn {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: background 0.2s;
    }

    .btn-primary {
      background: var(--primary);
      color: white;
    }

    .btn-primary:hover {
      background: var(--primary-dark);
    }

    .btn-secondary {
      background: white;
      color: var(--secondary);
      border: 1px solid var(--border);
    }

    .btn-secondary:hover {
      background: var(--bg);
    }

    .btn-success {
      background: var(--success);
      color: white;
    }

    .btn-success:hover {
      background: #276749;
    }

    .btn-small {
      padding: 0.25rem 0.5rem;
      font-size: 0.8rem;
    }

    .cms-container {
      display: flex;
      height: calc(100vh - 60px);
    }

    .cms-sidebar {
      width: 300px;
      background: white;
      border-right: 1px solid var(--border);
      overflow-y: auto;
      flex-shrink: 0;
    }

    .sidebar-tabs {
      display: flex;
      border-bottom: 1px solid var(--border);
    }

    .sidebar-tab {
      flex: 1;
      padding: 0.75rem;
      border: none;
      background: none;
      cursor: pointer;
      font-weight: 500;
      color: var(--text);
      border-bottom: 2px solid transparent;
    }

    .sidebar-tab.active {
      color: var(--primary);
      border-bottom-color: var(--primary);
    }

    .sidebar-content {
      padding: 1rem;
    }

    .file-list {
      list-style: none;
    }

    .file-item {
      padding: 0.5rem;
      margin: 0.25rem 0;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.85rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .file-item:hover {
      background: var(--bg);
    }

    .file-item.active {
      background: var(--secondary);
      color: white;
    }

    .file-item.modified {
      position: relative;
    }

    .file-item.modified::after {
      content: '*';
      color: var(--warning);
      margin-left: 0.25rem;
    }

    .folder-header {
      font-weight: bold;
      padding: 0.5rem;
      margin-top: 1rem;
      color: var(--secondary);
      font-size: 0.85rem;
      text-transform: uppercase;
    }

    .cms-main {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .editor-toolbar {
      background: white;
      border-bottom: 1px solid var(--border);
      padding: 0.75rem 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .editor-path {
      font-family: monospace;
      font-size: 0.9rem;
      color: var(--secondary);
    }

    .editor-actions {
      display: flex;
      gap: 0.5rem;
    }

    .editor-container {
      flex: 1;
      display: flex;
      overflow: hidden;
    }

    .editor-pane {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .editor-pane-header {
      background: var(--bg-dark);
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
      font-weight: 500;
      border-bottom: 1px solid var(--border);
    }

    .editor-textarea {
      flex: 1;
      width: 100%;
      border: none;
      padding: 1rem;
      font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
      font-size: 0.9rem;
      line-height: 1.5;
      resize: none;
      background: white;
    }

    .editor-textarea:focus {
      outline: none;
    }

    .preview-pane {
      flex: 1;
      overflow-y: auto;
      background: white;
      border-left: 1px solid var(--border);
    }

    .preview-content {
      padding: 1rem;
    }

    .locale-editor {
      padding: 1rem;
      overflow-y: auto;
      height: 100%;
    }

    .locale-entry {
      margin-bottom: 1rem;
      background: white;
      border: 1px solid var(--border);
      border-radius: 4px;
      overflow: hidden;
    }

    .locale-key {
      background: var(--bg);
      padding: 0.5rem 0.75rem;
      font-family: monospace;
      font-size: 0.85rem;
      font-weight: 500;
      border-bottom: 1px solid var(--border);
    }

    .locale-value {
      width: 100%;
      border: none;
      padding: 0.75rem;
      font-size: 0.9rem;
      min-height: 60px;
      resize: vertical;
    }

    .locale-value:focus {
      outline: 2px solid var(--primary);
      outline-offset: -2px;
    }

    .git-panel {
      position: fixed;
      right: 0;
      top: 60px;
      width: 400px;
      height: calc(100vh - 60px);
      background: white;
      border-left: 1px solid var(--border);
      transform: translateX(100%);
      transition: transform 0.3s;
      z-index: 50;
      display: flex;
      flex-direction: column;
    }

    .git-panel.open {
      transform: translateX(0);
    }

    .git-panel-header {
      padding: 1rem;
      border-bottom: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .git-panel-header h3 {
      margin: 0;
    }

    .git-panel-content {
      flex: 1;
      overflow-y: auto;
      padding: 1rem;
    }

    .git-status-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem;
      font-size: 0.85rem;
      font-family: monospace;
    }

    .git-status-badge {
      padding: 0.125rem 0.375rem;
      border-radius: 3px;
      font-size: 0.75rem;
      font-weight: 500;
    }

    .git-status-badge.modified { background: #fef3c7; color: #92400e; }
    .git-status-badge.added { background: #d1fae5; color: #065f46; }
    .git-status-badge.deleted { background: #fee2e2; color: #991b1b; }
    .git-status-badge.untracked { background: #e5e7eb; color: #374151; }

    .commit-form {
      padding: 1rem;
      border-top: 1px solid var(--border);
    }

    .commit-form textarea {
      width: 100%;
      height: 80px;
      padding: 0.5rem;
      border: 1px solid var(--border);
      border-radius: 4px;
      margin-bottom: 0.5rem;
      resize: none;
    }

    .notification {
      position: fixed;
      bottom: 1rem;
      right: 1rem;
      padding: 1rem 1.5rem;
      border-radius: 4px;
      color: white;
      z-index: 200;
      animation: slideIn 0.3s;
    }

    .notification.success { background: var(--success); }
    .notification.error { background: var(--error); }
    .notification.info { background: var(--secondary); }

    .dev-banner {
      background: linear-gradient(90deg, #f59e0b, #d97706);
      color: white;
      text-align: center;
      padding: 0.5rem;
      font-size: 0.85rem;
      font-weight: 500;
    }

    .dev-banner code {
      background: rgba(0,0,0,0.2);
      padding: 0.1rem 0.4rem;
      border-radius: 3px;
      font-family: monospace;
    }

    @keyframes slideIn {
      from { transform: translateX(100%); opacity: 0; }
      to { transform: translateX(0); opacity: 1; }
    }

    .loading {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      color: var(--secondary);
    }

    .spinner {
      width: 24px;
      height: 24px;
      border: 3px solid var(--border);
      border-top-color: var(--primary);
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-right: 0.5rem;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .empty-state {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      color: #666;
      text-align: center;
      padding: 2rem;
    }

    .empty-state h3 {
      margin-bottom: 0.5rem;
    }

    .sidebar-actions {
      padding: 0.5rem 1rem;
      border-bottom: 1px solid var(--border);
      display: flex;
      gap: 0.5rem;
    }

    .btn-danger {
      background: var(--error);
      color: white;
    }

    .btn-danger:hover {
      background: #9b2c2c;
    }

    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0,0,0,0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 300;
    }

    .modal {
      background: white;
      border-radius: 8px;
      padding: 1.5rem;
      min-width: 400px;
      max-width: 500px;
    }

    .modal h3 {
      margin-bottom: 1rem;
    }

    .modal-actions {
      display: flex;
      gap: 0.5rem;
      justify-content: flex-end;
      margin-top: 1rem;
    }

    .form-group {
      margin-bottom: 1rem;
    }

    .form-group label {
      display: block;
      font-weight: 500;
      margin-bottom: 0.25rem;
    }

    .form-group input,
    .form-group select {
      width: 100%;
      padding: 0.5rem;
      border: 1px solid var(--border);
      border-radius: 4px;
      font-size: 0.9rem;
    }

    .form-group input:focus,
    .form-group select:focus {
      outline: 2px solid var(--primary);
      outline-offset: -1px;
    }

    .branch-selector {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
      padding: 0.75rem;
      background: var(--bg);
      border-radius: 4px;
    }

    .branch-selector select {
      flex: 1;
      padding: 0.5rem;
      border: 1px solid var(--border);
      border-radius: 4px;
    }

    .git-actions {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-bottom: 1rem;
    }

    .git-remote-info {
      font-size: 0.8rem;
      color: #666;
      margin-bottom: 1rem;
      word-break: break-all;
    }

    .file-item-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .file-item-delete {
      opacity: 0;
      background: none;
      border: none;
      color: var(--error);
      cursor: pointer;
      padding: 0.25rem;
      font-size: 1rem;
    }

    .file-item:hover .file-item-delete {
      opacity: 1;
    }
  </style>
</head>
<body>
  {{#if devMode}}
  <div class="dev-banner">
    Development Mode - Authentication bypassed. User: <code>{{user.name}}</code> ({{user.email}})
  </div>
  {{/if}}
  <header class="cms-header">
    <h1>
      <svg class="logo" viewBox="0 0 40 44" role="img">
        <path d="m38.5778 3.2s-7.2-3.2-19.3-3.2c-12.00002 0-19.2000222 3.2-19.2000222 3.2s-.6999998 14.1 2.1000022 22.1c4.8 14 17.20002 18 17.20002 18s12.3-3.9 17.2-18c2.6-8 2-22.1 2-22.1z" fill="#d8232a"></path>
        <path d="m32.0779 15.4v7.8h-9v9.1h-7.7v-9.1h-8.99997v-7.8h8.99997v-9.09995h7.7v9.09995z" fill="#ffffff"></path>
      </svg>
      LINDAS CMS
    </h1>
    <div class="cms-header-actions">
      {{#if user}}
      <span class="user-info">{{user.name}}</span>
      {{/if}}
      <button class="btn btn-secondary" onclick="exportBackup()">Export</button>
      <button class="btn btn-secondary" onclick="showImportModal()">Import</button>
      <button class="btn btn-secondary" onclick="toggleGitPanel()">Git</button>
      <a href="/" class="btn btn-secondary">Back to Site</a>
      {{#if authEnabled}}
      <a href="/cms/auth/logout" class="btn btn-secondary">Logout</a>
      {{/if}}
    </div>
  </header>

  <div class="cms-container">
    <aside class="cms-sidebar">
      <div class="sidebar-tabs">
        <button class="sidebar-tab active" onclick="switchTab('content')">Content</button>
        <button class="sidebar-tab" onclick="switchTab('locales')">Translations</button>
        <button class="sidebar-tab" onclick="switchTab('navigation')">Navigation</button>
      </div>
      <div class="sidebar-actions" id="sidebar-actions">
        <button class="btn btn-primary btn-small" onclick="showNewFileModal()">+ New Page</button>
      </div>
      <div class="sidebar-content" id="sidebar-content">
        <div class="loading"><div class="spinner"></div> Loading...</div>
      </div>
    </aside>

    <main class="cms-main">
      <div class="editor-toolbar" id="editor-toolbar" style="display: none;">
        <span class="editor-path" id="editor-path"></span>
        <div class="editor-actions">
          <button class="btn btn-secondary btn-small" onclick="reloadFile()">Reload</button>
          <button class="btn btn-success btn-small" onclick="saveFile()">Save</button>
          <button class="btn btn-danger btn-small" onclick="showDeleteFileModal()" id="delete-btn" style="display: none;">Delete</button>
        </div>
      </div>
      <div class="editor-container" id="editor-container">
        <div class="empty-state">
          <h3>No file selected</h3>
          <p>Select a file from the sidebar to start editing</p>
        </div>
      </div>
    </main>
  </div>

  <div class="git-panel" id="git-panel">
    <div class="git-panel-header">
      <h3>Git</h3>
      <button class="btn btn-secondary btn-small" onclick="toggleGitPanel()">Close</button>
    </div>
    <div class="git-panel-content" id="git-status">
      <div class="loading"><div class="spinner"></div> Loading...</div>
    </div>
    <div class="commit-form">
      <textarea id="commit-message" placeholder="Commit message..."></textarea>
      <button class="btn btn-success" style="width: 100%;" onclick="commitChanges()">Commit Changes</button>
    </div>
  </div>

  <!-- Modals -->
  <div class="modal-overlay" id="modal-overlay" style="display: none;" onclick="closeModal(event)">
    <div class="modal" id="modal-content" onclick="event.stopPropagation()">
      <!-- Modal content injected by JS -->
    </div>
  </div>

  <script>
    // State
    let currentTab = 'content';
    let currentFile = null;
    let contentFiles = [];
    let localeFiles = [];
    let contentFolders = [];
    let unsavedChanges = {};
    let gitBranches = { current: '', local: [], remote: [] };

    // API calls
    async function api(endpoint, options = {}) {
      const response = await fetch(`/cms/api/${endpoint}`, {
        ...options,
        headers: {
          'Content-Type': 'application/json',
          ...options.headers
        },
        body: options.body ? JSON.stringify(options.body) : undefined
      });

      if (!response.ok) {
        const error = await response.json().catch(() => ({ error: 'Request failed' }));
        throw new Error(error.error || 'Request failed');
      }

      return response.json();
    }

    // Notification
    function notify(message, type = 'info') {
      const notification = document.createElement('div');
      notification.className = `notification ${type}`;
      notification.textContent = message;
      document.body.appendChild(notification);

      setTimeout(() => notification.remove(), 3000);
    }

    // Modal functions
    function showModal(content) {
      document.getElementById('modal-content').innerHTML = content;
      document.getElementById('modal-overlay').style.display = 'flex';
    }

    function closeModal(event) {
      if (event && event.target !== event.currentTarget) return;
      document.getElementById('modal-overlay').style.display = 'none';
    }

    // New file modal
    async function showNewFileModal() {
      try {
        const { folders } = await api('content/folders');
        contentFolders = folders;

        let folderOptions = '<option value="">Root</option>';
        folders.forEach(f => {
          folderOptions += `<option value="${f}">${f}</option>`;
        });

        showModal(`
          <h3>Create New Page</h3>
          <div class="form-group">
            <label>Folder</label>
            <select id="new-file-folder">
              ${folderOptions}
            </select>
          </div>
          <div class="form-group">
            <label>File Name</label>
            <input type="text" id="new-file-name" placeholder="my-page.md">
          </div>
          <div class="form-group">
            <label>Initial Content</label>
            <textarea id="new-file-content" style="width: 100%; height: 100px; padding: 0.5rem; border: 1px solid var(--border); border-radius: 4px;"># New Page

Add your content here.
</textarea>
          </div>
          <div class="modal-actions">
            <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
            <button class="btn btn-primary" onclick="createFile()">Create</button>
          </div>
        `);
      } catch (err) {
        notify('Error loading folders: ' + err.message, 'error');
      }
    }

    // Create file
    async function createFile() {
      const folder = document.getElementById('new-file-folder').value;
      const name = document.getElementById('new-file-name').value.trim();
      const content = document.getElementById('new-file-content').value;

      if (!name) {
        notify('Please enter a file name', 'error');
        return;
      }

      const path = folder ? `${folder}/${name}` : name;

      try {
        const { path: createdPath } = await api('content/create', {
          method: 'POST',
          body: { path, content }
        });
        closeModal();
        notify('File created: ' + createdPath, 'success');
        loadSidebar();
        openContentFile(createdPath);
      } catch (err) {
        notify('Error creating file: ' + err.message, 'error');
      }
    }

    // Delete file modal
    function showDeleteFileModal() {
      if (!currentFile || currentFile.type !== 'content') {
        notify('No content file selected', 'error');
        return;
      }

      showModal(`
        <h3>Delete File</h3>
        <p>Are you sure you want to delete <strong>${currentFile.path}</strong>?</p>
        <p style="color: var(--error); margin-top: 0.5rem;">This action cannot be undone.</p>
        <div class="modal-actions">
          <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
          <button class="btn btn-danger" onclick="deleteFile()">Delete</button>
        </div>
      `);
    }

    // Delete file
    async function deleteFile() {
      if (!currentFile || currentFile.type !== 'content') return;

      try {
        await api('content/delete', { method: 'POST', body: { path: currentFile.path } });
        closeModal();
        notify('File deleted', 'success');
        clearEditor();
        loadSidebar();
      } catch (err) {
        notify('Error deleting file: ' + err.message, 'error');
      }
    }

    // Tab switching
    function switchTab(tab) {
      currentTab = tab;
      document.querySelectorAll('.sidebar-tab').forEach(t => {
        t.classList.toggle('active', t.textContent.toLowerCase().includes(tab));
      });

      // Update sidebar actions based on tab
      const sidebarActions = document.getElementById('sidebar-actions');
      if (tab === 'content') {
        sidebarActions.innerHTML = '<button class="btn btn-primary btn-small" onclick="showNewFileModal()">+ New Page</button>';
        sidebarActions.style.display = 'flex';
      } else if (tab === 'locales') {
        sidebarActions.style.display = 'none';
      } else if (tab === 'navigation') {
        sidebarActions.style.display = 'none';
      }

      loadSidebar();
      clearEditor();
    }

    // Load sidebar content
    async function loadSidebar() {
      const sidebar = document.getElementById('sidebar-content');
      sidebar.innerHTML = '<div class="loading"><div class="spinner"></div> Loading...</div>';

      try {
        if (currentTab === 'content') {
          const { files } = await api('content');
          contentFiles = files;
          renderContentList(files);
        } else if (currentTab === 'locales') {
          const { files } = await api('locales');
          localeFiles = files;
          renderLocaleList(files);
        } else if (currentTab === 'navigation') {
          renderNavigationList();
        }
      } catch (err) {
        sidebar.innerHTML = `<p style="color: var(--error); padding: 1rem;">Error: ${err.message}</p>`;
      }
    }

    // Render content file list
    function renderContentList(files) {
      const sidebar = document.getElementById('sidebar-content');

      // Group by folder
      const folders = {};
      files.forEach(file => {
        const parts = file.path.split('/');
        const folder = parts.length > 1 ? parts.slice(0, -1).join('/') : 'root';
        if (!folders[folder]) folders[folder] = [];
        folders[folder].push(file);
      });

      let html = '';
      Object.keys(folders).sort().forEach(folder => {
        html += `<div class="folder-header">${folder}</div>`;
        html += '<ul class="file-list">';
        folders[folder].forEach(file => {
          const isActive = currentFile && currentFile.path === file.path;
          const isModified = unsavedChanges[file.path];
          html += `<li class="file-item ${isActive ? 'active' : ''} ${isModified ? 'modified' : ''}"
                       onclick="openContentFile('${file.path}')">${file.name}</li>`;
        });
        html += '</ul>';
      });

      sidebar.innerHTML = html || '<p style="padding: 1rem; color: #666;">No content files found</p>';
    }

    // Render locale list
    function renderLocaleList(files) {
      const sidebar = document.getElementById('sidebar-content');
      let html = '<ul class="file-list">';

      files.forEach(file => {
        const isActive = currentFile && currentFile.locale === file.locale;
        html += `<li class="file-item ${isActive ? 'active' : ''}"
                     onclick="openLocaleFile('${file.locale}')">${file.locale.toUpperCase()} - ${file.filename}</li>`;
      });

      html += '</ul>';
      sidebar.innerHTML = html;
    }

    // Render navigation list
    function renderNavigationList() {
      const sidebar = document.getElementById('sidebar-content');
      sidebar.innerHTML = `
        <ul class="file-list">
          <li class="file-item ${currentFile && currentFile.type === 'navigation' && currentFile.section === 'header' ? 'active' : ''}"
              onclick="openNavigationEditor('header')">Header Navigation</li>
          <li class="file-item ${currentFile && currentFile.type === 'navigation' && currentFile.section === 'footer' ? 'active' : ''}"
              onclick="openNavigationEditor('footer')">Footer Navigation</li>
        </ul>
      `;
    }

    // Open content file
    async function openContentFile(path) {
      document.getElementById('editor-toolbar').style.display = 'flex';
      document.getElementById('editor-path').textContent = path;
      document.getElementById('delete-btn').style.display = 'inline-block';

      const container = document.getElementById('editor-container');
      container.innerHTML = '<div class="loading"><div class="spinner"></div> Loading...</div>';

      try {
        const { content } = await api('content/read', { method: 'POST', body: { path } });
        currentFile = { type: 'content', path, originalContent: content };

        container.innerHTML = `
          <div class="editor-pane">
            <div class="editor-pane-header">Editor</div>
            <textarea class="editor-textarea" id="content-editor" oninput="markUnsaved()">${escapeHtml(content)}</textarea>
          </div>
          <div class="preview-pane">
            <div class="editor-pane-header">Preview</div>
            <div class="preview-content" id="preview-content"></div>
          </div>
        `;

        updatePreview();
        loadSidebar();
      } catch (err) {
        container.innerHTML = `<div class="empty-state"><p style="color: var(--error);">Error: ${err.message}</p></div>`;
      }
    }

    // Open locale file
    async function openLocaleFile(locale) {
      document.getElementById('editor-toolbar').style.display = 'flex';
      document.getElementById('editor-path').textContent = `${locale}.json`;
      document.getElementById('delete-btn').style.display = 'none';

      const container = document.getElementById('editor-container');
      container.innerHTML = '<div class="loading"><div class="spinner"></div> Loading...</div>';

      try {
        const { content } = await api('locales/read', { method: 'POST', body: { locale } });
        currentFile = { type: 'locale', locale, originalContent: content };

        let html = '<div class="locale-editor">';
        Object.entries(content).forEach(([key, value]) => {
          html += `
            <div class="locale-entry">
              <div class="locale-key">${escapeHtml(key)}</div>
              <textarea class="locale-value" data-key="${escapeHtml(key)}" oninput="markUnsaved()">${escapeHtml(value)}</textarea>
            </div>
          `;
        });
        html += '</div>';

        container.innerHTML = html;
        loadSidebar();
      } catch (err) {
        container.innerHTML = `<div class="empty-state"><p style="color: var(--error);">Error: ${err.message}</p></div>`;
      }
    }

    // Open navigation editor
    async function openNavigationEditor(section) {
      document.getElementById('editor-toolbar').style.display = 'flex';
      document.getElementById('editor-path').textContent = `Navigation: ${section}`;
      document.getElementById('delete-btn').style.display = 'none';

      const container = document.getElementById('editor-container');
      container.innerHTML = '<div class="loading"><div class="spinner"></div> Loading...</div>';

      try {
        const { content } = await api('navigation/read', { method: 'POST', body: { section } });
        currentFile = { type: 'navigation', section, originalContent: content };

        let html = '<div class="locale-editor" style="max-width: 800px;">';
        html += '<p style="margin-bottom: 1rem; color: #666;">Edit navigation links for the ' + section + '. Each entry has a translation key and a URL.</p>';

        content.forEach((item, index) => {
          html += `
            <div class="locale-entry" style="margin-bottom: 1.5rem;">
              <div class="locale-key" style="display: flex; justify-content: space-between; align-items: center;">
                <span>Link ${index + 1}</span>
                <button class="btn btn-danger btn-small" onclick="removeNavItem(${index})" style="padding: 0.15rem 0.4rem;">Remove</button>
              </div>
              <div style="padding: 0.75rem;">
                <div class="form-group" style="margin-bottom: 0.5rem;">
                  <label style="font-size: 0.85rem;">Label Key (translation)</label>
                  <input type="text" class="nav-label" data-index="${index}" value="${escapeHtml(item.labelKey || '')}" oninput="markUnsaved()">
                </div>
                <div class="form-group" style="margin-bottom: 0;">
                  <label style="font-size: 0.85rem;">URL</label>
                  <input type="text" class="nav-url" data-index="${index}" value="${escapeHtml(item.url || '')}" oninput="markUnsaved()">
                </div>
              </div>
            </div>
          `;
        });

        html += '<button class="btn btn-secondary" onclick="addNavItem()" style="width: 100%;">+ Add Link</button>';
        html += '</div>';

        container.innerHTML = html;
        loadSidebar();
      } catch (err) {
        container.innerHTML = `<div class="empty-state"><p style="color: var(--error);">Error: ${err.message}</p></div>`;
      }
    }

    // Add navigation item
    function addNavItem() {
      if (!currentFile || currentFile.type !== 'navigation') return;

      const content = getNavigationContent();
      content.push({ labelKey: '', url: '' });
      currentFile.originalContent = content;
      openNavigationEditor(currentFile.section);
      markUnsaved();
    }

    // Remove navigation item
    function removeNavItem(index) {
      if (!currentFile || currentFile.type !== 'navigation') return;

      const content = getNavigationContent();
      content.splice(index, 1);
      currentFile.originalContent = content;
      openNavigationEditor(currentFile.section);
      markUnsaved();
    }

    // Get navigation content from form
    function getNavigationContent() {
      const items = [];
      const labels = document.querySelectorAll('.nav-label');
      const urls = document.querySelectorAll('.nav-url');

      labels.forEach((label, index) => {
        items.push({
          labelKey: label.value,
          url: urls[index].value
        });
      });

      return items;
    }

    // Clear editor
    function clearEditor() {
      currentFile = null;
      document.getElementById('editor-toolbar').style.display = 'none';
      document.getElementById('delete-btn').style.display = 'none';
      document.getElementById('editor-container').innerHTML = `
        <div class="empty-state">
          <h3>No file selected</h3>
          <p>Select a file from the sidebar to start editing</p>
        </div>
      `;
    }

    // Mark file as having unsaved changes
    function markUnsaved() {
      if (currentFile) {
        unsavedChanges[currentFile.path || currentFile.locale || currentFile.section] = true;
        loadSidebar();
      }

      if (currentFile && currentFile.type === 'content') {
        updatePreview();
      }
    }

    // Update markdown preview
    function updatePreview() {
      const editor = document.getElementById('content-editor');
      const preview = document.getElementById('preview-content');
      if (editor && preview) {
        // Basic markdown rendering (for a full solution, use a library like marked.js)
        let html = editor.value
          .replace(/^### (.*$)/gim, '<h3>$1</h3>')
          .replace(/^## (.*$)/gim, '<h2>$1</h2>')
          .replace(/^# (.*$)/gim, '<h1>$1</h1>')
          .replace(/\*\*(.*)\*\*/gim, '<strong>$1</strong>')
          .replace(/\*(.*)\*/gim, '<em>$1</em>')
          .replace(/\[(.*?)\]\((.*?)\)/gim, '<a href="$2">$1</a>')
          .replace(/\n/gim, '<br>');
        preview.innerHTML = html;
      }
    }

    // Save file
    async function saveFile() {
      if (!currentFile) return;

      try {
        if (currentFile.type === 'content') {
          const content = document.getElementById('content-editor').value;
          await api('content/write', { method: 'POST', body: { path: currentFile.path, content } });
          currentFile.originalContent = content;
        } else if (currentFile.type === 'locale') {
          const content = {};
          document.querySelectorAll('.locale-value').forEach(textarea => {
            content[textarea.dataset.key] = textarea.value;
          });
          await api('locales/write', { method: 'POST', body: { locale: currentFile.locale, content } });
          currentFile.originalContent = content;
        } else if (currentFile.type === 'navigation') {
          const content = getNavigationContent();
          await api('navigation/write', { method: 'POST', body: { section: currentFile.section, content } });
          currentFile.originalContent = content;
        }

        delete unsavedChanges[currentFile.path || currentFile.locale || currentFile.section];
        loadSidebar();
        notify('File saved successfully', 'success');
      } catch (err) {
        notify(`Save failed: ${err.message}`, 'error');
      }
    }

    // Reload file
    async function reloadFile() {
      if (!currentFile) return;

      if (currentFile.type === 'content') {
        await openContentFile(currentFile.path);
      } else if (currentFile.type === 'locale') {
        await openLocaleFile(currentFile.locale);
      } else if (currentFile.type === 'navigation') {
        await openNavigationEditor(currentFile.section);
      }

      delete unsavedChanges[currentFile.path || currentFile.locale || currentFile.section];
      notify('File reloaded', 'info');
    }

    // Git panel
    function toggleGitPanel() {
      const panel = document.getElementById('git-panel');
      panel.classList.toggle('open');
      if (panel.classList.contains('open')) {
        loadGitStatus();
      }
    }

    async function loadGitStatus() {
      const container = document.getElementById('git-status');
      container.innerHTML = '<div class="loading"><div class="spinner"></div> Loading...</div>';

      try {
        const [statusResult, branchesResult] = await Promise.all([
          api('git/status'),
          api('git/branches')
        ]);

        const status = statusResult.status;
        const branches = branchesResult.branches;
        gitBranches = branches;

        let branchOptions = '';
        branches.local.forEach(b => {
          branchOptions += `<option value="${b}" ${b === branches.current ? 'selected' : ''}>${b}</option>`;
        });

        let html = `
          <div class="branch-selector">
            <label style="font-weight: 500;">Branch:</label>
            <select id="branch-select" onchange="switchBranch(this.value)">
              ${branchOptions}
            </select>
            <button class="btn btn-secondary btn-small" onclick="showNewBranchModal()" title="New Branch">+</button>
          </div>
          <div class="git-actions">
            <button class="btn btn-secondary btn-small" onclick="gitFetch()">Fetch</button>
            <button class="btn btn-secondary btn-small" onclick="gitPull()">Pull</button>
            <button class="btn btn-secondary btn-small" onclick="gitPush()">Push</button>
          </div>
        `;

        if (branches.remoteUrl) {
          html += `<div class="git-remote-info">Remote: ${branches.remoteUrl}</div>`;
        }

        html += `<p><strong>Last commit:</strong> ${status.lastCommit}</p>`;
        html += '<hr style="margin: 1rem 0; border: none; border-top: 1px solid var(--border);">';

        if (status.files.length === 0) {
          html += '<p style="color: #666;">No changes</p>';
        } else {
          html += '<div style="margin-top: 0.5rem;">';
          status.files.forEach(file => {
            html += `
              <div class="git-status-item">
                <span class="git-status-badge ${file.status}">${file.status.charAt(0).toUpperCase()}</span>
                <span>${file.path}</span>
              </div>
            `;
          });
          html += '</div>';
        }

        container.innerHTML = html;
      } catch (err) {
        container.innerHTML = `<p style="color: var(--error);">Error: ${err.message}</p>`;
      }
    }

    // Branch operations
    async function switchBranch(branch) {
      if (Object.keys(unsavedChanges).length > 0) {
        notify('Please save or discard changes before switching branches', 'error');
        document.getElementById('branch-select').value = gitBranches.current;
        return;
      }

      try {
        const { result } = await api('git/checkout', { method: 'POST', body: { branch } });
        if (result.success) {
          notify(result.message, 'success');
          loadGitStatus();
          loadSidebar();
        } else {
          notify(result.message, 'error');
          document.getElementById('branch-select').value = gitBranches.current;
        }
      } catch (err) {
        notify('Error switching branch: ' + err.message, 'error');
        document.getElementById('branch-select').value = gitBranches.current;
      }
    }

    function showNewBranchModal() {
      showModal(`
        <h3>Create New Branch</h3>
        <div class="form-group">
          <label>Branch Name</label>
          <input type="text" id="new-branch-name" placeholder="feature/my-feature">
        </div>
        <div class="modal-actions">
          <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
          <button class="btn btn-primary" onclick="createBranch()">Create</button>
        </div>
      `);
    }

    async function createBranch() {
      const name = document.getElementById('new-branch-name').value.trim();
      if (!name) {
        notify('Please enter a branch name', 'error');
        return;
      }

      try {
        const { result } = await api('git/branch/create', { method: 'POST', body: { name, checkout: true } });
        if (result.success) {
          closeModal();
          notify(result.message, 'success');
          loadGitStatus();
        } else {
          notify(result.message, 'error');
        }
      } catch (err) {
        notify('Error creating branch: ' + err.message, 'error');
      }
    }

    async function gitFetch() {
      try {
        notify('Fetching...', 'info');
        const { result } = await api('git/fetch', { method: 'POST' });
        if (result.success) {
          notify(result.message, 'success');
          loadGitStatus();
        } else {
          notify(result.message, 'error');
        }
      } catch (err) {
        notify('Error fetching: ' + err.message, 'error');
      }
    }

    async function gitPull() {
      try {
        notify('Pulling...', 'info');
        const { result } = await api('git/pull', { method: 'POST' });
        if (result.success) {
          notify(result.message, 'success');
          loadGitStatus();
          loadSidebar();
        } else {
          notify(result.message, 'error');
        }
      } catch (err) {
        notify('Error pulling: ' + err.message, 'error');
      }
    }

    async function gitPush() {
      try {
        notify('Pushing...', 'info');
        const { result } = await api('git/push', { method: 'POST', body: { setUpstream: true } });
        if (result.success) {
          notify(result.message, 'success');
          loadGitStatus();
        } else {
          notify(result.message, 'error');
        }
      } catch (err) {
        notify('Error pushing: ' + err.message, 'error');
      }
    }

    async function commitChanges() {
      const message = document.getElementById('commit-message').value.trim();
      if (!message) {
        notify('Please enter a commit message', 'error');
        return;
      }

      try {
        const { result } = await api('git/commit', { method: 'POST', body: { message } });
        if (result.success) {
          notify(`Committed: ${result.commitHash}`, 'success');
          document.getElementById('commit-message').value = '';
          loadGitStatus();
        } else {
          notify(result.message, 'error');
        }
      } catch (err) {
        notify(`Commit failed: ${err.message}`, 'error');
      }
    }

    // Archive functions
    async function exportBackup() {
      try {
        notify('Preparing export...', 'info');
        const response = await fetch('/cms/api/archive/export');
        if (!response.ok) {
          throw new Error('Export failed');
        }

        const blob = await response.blob();
        const filename = response.headers.get('Content-Disposition')?.match(/filename="(.+)"/)?.[1] || 'cms-backup.json';

        // Create download link
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = filename;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);

        notify('Backup exported successfully', 'success');
      } catch (err) {
        notify('Export failed: ' + err.message, 'error');
      }
    }

    function showImportModal() {
      showModal(`
        <h3>Import Backup</h3>
        <p style="margin-bottom: 1rem; color: #666;">Select a backup file to restore content, translations, and navigation settings.</p>
        <div class="form-group">
          <label>Backup File (.json)</label>
          <input type="file" id="import-file" accept=".json" style="width: 100%; padding: 0.5rem; border: 1px solid var(--border); border-radius: 4px;">
        </div>
        <div class="form-group">
          <label style="display: flex; align-items: center; gap: 0.5rem; font-weight: normal;">
            <input type="checkbox" id="import-overwrite">
            Overwrite existing files
          </label>
        </div>
        <div class="form-group">
          <label style="font-weight: 500; margin-bottom: 0.5rem; display: block;">Import options:</label>
          <label style="display: flex; align-items: center; gap: 0.5rem; font-weight: normal; margin-bottom: 0.25rem;">
            <input type="checkbox" id="import-content" checked>
            Content pages
          </label>
          <label style="display: flex; align-items: center; gap: 0.5rem; font-weight: normal; margin-bottom: 0.25rem;">
            <input type="checkbox" id="import-locales" checked>
            Translations
          </label>
          <label style="display: flex; align-items: center; gap: 0.5rem; font-weight: normal;">
            <input type="checkbox" id="import-navigation" checked>
            Navigation
          </label>
        </div>
        <div class="modal-actions">
          <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
          <button class="btn btn-primary" onclick="importBackup()">Import</button>
        </div>
      `);
    }

    async function importBackup() {
      const fileInput = document.getElementById('import-file');
      const overwrite = document.getElementById('import-overwrite').checked;
      const skipContent = !document.getElementById('import-content').checked;
      const skipLocales = !document.getElementById('import-locales').checked;
      const skipNavigation = !document.getElementById('import-navigation').checked;

      if (!fileInput.files || fileInput.files.length === 0) {
        notify('Please select a file', 'error');
        return;
      }

      try {
        notify('Reading file...', 'info');
        const file = fileInput.files[0];
        const text = await file.text();
        const archive = JSON.parse(text);

        if (!archive.version) {
          throw new Error('Invalid backup file format');
        }

        notify('Importing...', 'info');
        const { results } = await api('archive/import', {
          method: 'POST',
          body: {
            archive,
            options: { overwrite, skipContent, skipLocales, skipNavigation }
          }
        });

        closeModal();

        let summary = 'Import completed: ';
        if (!skipContent) {
          summary += `Content: ${results.content.created} created, ${results.content.updated} updated, ${results.content.skipped} skipped. `;
        }
        if (!skipLocales) {
          summary += `Locales: ${results.locales.created} created, ${results.locales.updated} updated, ${results.locales.skipped} skipped. `;
        }
        if (!skipNavigation && results.navigation.updated) {
          summary += 'Navigation updated.';
        }

        notify(summary, 'success');
        loadSidebar();
      } catch (err) {
        notify('Import failed: ' + err.message, 'error');
      }
    }

    // Utilities
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadSidebar();
    });

    // Warn before leaving with unsaved changes
    window.addEventListener('beforeunload', (e) => {
      if (Object.keys(unsavedChanges).length > 0) {
        e.preventDefault();
        e.returnValue = '';
      }
    });
  </script>
